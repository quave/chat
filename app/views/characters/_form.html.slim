= simple_form_for [@game, @character], html: { class: 'form-horizontal', role: 'form' }, wrapper: :horizontal_form do |f|
  = f.error_notification

  = f.input :name, input_html: { class: 'input-lg' }, label_html: {class: 'label-lg'}
  = f.input :major_attr, input_html: { rows: 8 }
  = f.input :minor_attr, input_html: { rows: 8 }
  = f.input :description, input_html: { rows: 8 }
  = f.input :inventory, input_html: { rows: 8 }

  .col-sm-offset-2
    = f.button :submit
